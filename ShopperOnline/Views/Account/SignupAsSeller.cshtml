@{
    ViewData["Title"] = "Signup Seller";
}

<div class="header header-demo header-logo-center  position-fixed d-flex justify-content-around  ">
    <partial name="~/Views/Shared/_Navbar.cshtml" />

</div>

<div id="preloader"><div class="spinner-border color-highlight" role="status"></div></div>

<div class="card card-style " style="margin-top: 5rem;">
    <div class="content mb-0 mt-1">
        <h3 class="text-center pt-3">Sign Up as Seller</h3>
        <div class="input-style input-style-2  input-required">

            <span class="color-highlight">First Name</span>
            <em>(required)</em>
            <input class="form-control" type="name" placeholder="">
        </div>
        <div class="input-style input-style-2  input-required">

            <span class="color-highlight">Last Name</span>
            <em>(required)</em>
            <input class="form-control" type="name" placeholder="">
        </div>
        <div class="input-style input-style-2  input-required">

            <span class="color-highlight">Cell Phone</span>
            <em>(required)</em>
            <input class="form-control" type="tel" placeholder="">
        </div>
        <div class="input-style input-style-2  input-required">

            <span class="color-highlight">Home Phone</span>
            <em>(required)</em>
            <input class="form-control" type="tel" placeholder="">
        </div>
        <div class="input-style input-style-2 input-required">
            <span class="color-highlight">City</span>
            <em>(required)</em>
            <input class="form-control" type="url" placeholder="">
        </div>
        <div class="input-style input-style-2 input-required">
            <span class="color-highlight">State</span>
            <em>(required)</em>
            <input class="form-control" type="url" placeholder="">
        </div>
        <div class="input-style input-style-2 input-required">
            <span class="color-highlight">Country</span>
            <em>(required)</em>
            <input class="form-control" type="url" placeholder="">
        </div>

        <div class="input-style input-style-2 input-required">
            <span class="color-highlight">Email</span>
            <em>(required)</em>
            <input class="form-control" type="email" placeholder="">
        </div>

        <div class="input-style input-style-2 input-required">
            <span class="color-highlight">Password</span>
            <em>(required)</em>
            <input class="form-control" type="password" placeholder="">
        </div>
        <div class="input-style input-style-2 input-required">
            <span class="color-highlight">Confirm Password</span>
            <em>(required)</em>
            <input class="form-control" type="password" placeholder="">
        </div>
        <!--        <div class="input-style has-icon input-style-1 input-required mb-4">-->
        <!--            <i class="input-icon fa fa-lock color-theme"></i>-->
        <!--            <span>Password</span>-->
        <!--            <em>(required)</em>-->
        <!--            <input id="custom_input" type="password" placeholder="Confirm your Password">-->
        <!--        </div>-->

        <a href="#" class="btn btn-m btn-full rounded-sm shadow-l bg-green1-dark text-uppercase font-900">Create account</a>

        <div class="divider"></div>

        <p class="text-center">
            <a asp-action="LoginAsSeller" asp-controller="Account" class="color-highlight opacity-80 font-12">Already Registered? Sign in Here</a>
        </p>

        <a href="#" class="btn btn-icon btn-m btn-full rounded-s shadow-l bg-facebook text-uppercase font-900 text-left"><i class="fab fa-facebook-f text-center"></i>Register with Facebook</a>
        <a href="#" class="btn btn-icon btn-m mt-2 mb-4 btn-full rounded-s shadow-l bg-twitter text-uppercase font-900 text-left"><i class="fab fa-twitter text-center"></i>Register with Twitter</a>

    </div>
</div>

