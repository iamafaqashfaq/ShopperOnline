                                    "x-rapidapi-host": "shopalive.p.rapidapi.com"
                                },
                                data: JSON.stringify(data),
                                success: function (res, status) {
                                    if (status == "success") {
                                        console.log(res)
                                    }
                                },
                                error: function (error) {
