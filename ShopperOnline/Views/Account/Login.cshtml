                    }
                    $.ajax({
                        url: "https://shopalive.p.rapidapi.com/v1/Users/Login",
                        type: "post",
                        contentType: "application/json",
                        headers: {
                            "x-rapidapi-key": "bd9fbd2bd1msh27bbb1cfb3648f9p1af4a1jsn0415a6279879",
