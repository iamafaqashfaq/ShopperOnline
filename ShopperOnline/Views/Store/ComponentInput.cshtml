@{
    ViewData["Title"] = "Component Input";
}

<div id="preloader"><div class="spinner-border color-highlight" role="status"></div></div>

<div id="page">
    <!-- header and footer bar go here-->
    <div class="header header-demo header-logo-center  position-fixed d-flex justify-content-around">
        <partial name="~/Views/Shared/_Navbar.cshtml" />

    </div>
    <div id="footer-bar" class="footer-bar-5">
        <a asp-action="Cart" asp-controller="Store" class="active-nav"><i class="fa fa-arrow-left text-primary"></i><span>Back</span></a>
        <a href="index-media.html"><i data-feather="image" data-feather-line="1" data-feather-size="21" data-feather-color="green1-dark" data-feather-bg="green1-fade-light"></i><span>Media</span></a>
        <a href="index.html"><i data-feather="home" data-feather-line="1" data-feather-size="21" data-feather-color="blue2-dark" data-feather-bg="blue2-fade-light"></i><span>Home</span></a>
        <a href="index-pages.html"><i data-feather="file" data-feather-line="1" data-feather-size="21" data-feather-color="brown1-dark" data-feather-bg="brown1-fade-light"></i><span>Pages</span></a>
        <a href="index-settings.html"><i data-feather="settings" data-feather-line="1" data-feather-size="21" data-feather-color="gray2-dark" data-feather-bg="gray2-fade-light"></i><span>Settings</span></a>
    </div>

    <div class="page-content" style="min-height:60vh!important">
        <div class="card card-style " style="margin-top: 5rem;">
            <div class="card-header text-center"><h3 class="bolder">Check Out</h3></div>
            <div class="content mb-0">

                <div class="row">
                    <div class="col-12">
                        <div class="input-style input-style-2  input-required">
                            <span class="color-highlight">First Name</span>
                            <em>(required)</em>
                            <input class="form-control" type="name" placeholder="">
                        </div>
                        <div class="input-style input-style-2  input-required">

                            <span class="color-highlight">Last Name</span>
                            <em>(required)</em>
                            <input class="form-control" type="name" placeholder="">
                        </div>
                        <div class="input-style input-style-2 input-required">
                            <span class="color-highlight">Email</span>
                            <em>(required)</em>
                            <input class="form-control" type="email" placeholder="">
                        </div>
                        <div class="input-style input-style-2 input-required">
                            <span class="color-highlight">Password</span>
                            <em>(required)</em>
                            <input class="form-control" type="password" placeholder="">
                        </div>
                        <div class="input-style input-style-2 input-required">
                            <span class="color-highlight">City</span>
                            <em>(required)</em>
                            <input class="form-control" type="url" placeholder="">
                        </div>
                        <div class="input-style input-style-2 input-required">
                            <span class="color-highlight">State</span>
                            <em>(required)</em>
                            <input class="form-control" type="url" placeholder="">
                        </div>
                        <div class="input-style input-style-2 input-required">
                            <span class="color-highlight">Website</span>
                            <em>(required)</em>
                            <input class="form-control" type="url" placeholder="">
                        </div>
                        <div class="input-style input-style-2 input-required">
                            <span class="color-highlight">Phone</span>
                            <em>(required)</em>
                            <input class="form-control" type="tel" placeholder="">
                        </div>
                        <div class="input-style input-style-1 input-required">
                            <span>Enter your message</span>
                            <em>(required)</em>
                            <textarea placeholder="Enter your message"></textarea>
                        </div>

                    </div>
                </div>
                <a asp-action="PaymentDetail" asp-controller="Store" class="btn btn-sm float-right btn-primary mb-4">Next</a>

            </div>
        </div>
        <!-- footer and footer card-->
        <div class="footer" data-menu-load="menu-footer.html"></div>
    </div>
    <!-- end of page content-->

    <div id="menu-share"
         class="menu menu-box-bottom menu-box-detached rounded-m"
         data-menu-load="menu-share.html"
         data-menu-height="420"
         data-menu-effect="menu-over">
    </div>

    <div id="menu-highlights"
         class="menu menu-box-bottom menu-box-detached rounded-m"
         data-menu-load="menu-colors.html"
         data-menu-height="510"
         data-menu-effect="menu-over">
    </div>

    <div id="menu-main"
         class="menu menu-box-right menu-box-detached rounded-m"
         data-menu-width="260"
         data-menu-load="menu-main.html"
         data-menu-active="nav-features"
         data-menu-effect="menu-over">
    </div>

    <div id="menu-cookie-bottom" class="menu menu-box-bottom menu-box-detached rounded-m"
         data-menu-height="230"
         data-menu-effect="menu-over"
         data-menu-select="page-components">
        <!-- add data-cookie-activate above to auto-activate the menu on cookie detection -->
        <div class="boxed-text-xl">
            <h2 class="text-center mt-3 pt-1">We're using cookies</h2>
            <p class="text-center mt-n2 mb-3 color-highlight">To make your experience awesome!</p>
            <p>
                Our page uses cookies to make your overall experience better, faster and smoother. It's awesome.
            </p>
            <!-- add hide-cookie to the class to delete the cookie-->
            <a href="#" class="close-menu btn btn-sm btn-center-xl rounded-xs shadow-m bg-highlight text-uppercase font-900">Accept</a>
        </div>
    </div>


</div> 